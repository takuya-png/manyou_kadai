<h1>管理者画面</h1>
<table border = "1" >

<th>ユーザーネーム</th>
<th>タスク数</th>
<th>詳細</th>
<th>編集</th>
<th>削除</th>
<% @users.each do |user| %>
<tr>
<td><%= user.name %></td>
<td><%= user.tasks.length %></td>
<td><%= link_to '詳細' ,admin_user_path(user.id) %></td>
<td><%= link_to '編集' ,edit_admin_user_path(user.id) %></td>
<td><%= link_to '削除' ,admin_user_path(user.id),method: :delete, data: { confirm: 'Are you sure?' }  %></td>
</tr>
<% end %>
</table>
<div class = "new_task_btn">
<button type="button" class="btn btn-default navbar-btn"><%= link_to '新たな管理者を作成する', new_admin_user_path %></button>
<button type="button" class="btn btn-default navbar-btn"><%= link_to '一般画面へ戻る', tasks_path %></button>
</div> 